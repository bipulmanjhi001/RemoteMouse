<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="org.pierre.remotedroid.client.activity.MediaActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:weightSum="4.2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_volumeup"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".38"
            android:src="@drawable/player_up_button" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4.5"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_Previous"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"


                android:src="@drawable/player_previous_button" />

            <ImageView
                android:id="@+id/btn_Pause"
                android:layout_width="0dp"
                android:layout_height="wrap_content"


                android:layout_weight="1"
                android:src="@drawable/pause_button"
                android:padding="4dp" />

            <ImageView
                android:id="@+id/btn_next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:src="@drawable/player_next_button" />


        </LinearLayout>

        <ImageView
            android:id="@+id/btn_volumedown"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight=".38"
            android:src="@drawable/player_down_button" />

    </LinearLayout>


</LinearLayout>
